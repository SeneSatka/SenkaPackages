{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./src/dist",
    "declarationDir": "./src/typings"
  },

  "include": ["ts/**/*.ts", "typings/**/*.d.ts"],
  "exclude": ["node_modules"],
  "rootDir": "./ts"
}
